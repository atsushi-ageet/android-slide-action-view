<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/affordanceHolderLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset" />

    <com.ageet.slideactionview.SlideActionView
        android:id="@+id/slideActionView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        app:slideactionview_paddingLeftFactor="@dimen/padding_left"
        app:slideactionview_paddingRightFactor="@dimen/padding_right"
        app:slideactionview_sliderDescription="@string/slider_description"
        app:slideactionview_sliderLeftDescription="@string/slider_left_description"
        app:slideactionview_sliderRightDescription="@string/slider_right_description"
        app:slideactionview_sliderBackground="@drawable/slider_bg"
        app:slideactionview_sliderRight="@drawable/slider_right"
        app:slideactionview_sliderLeft="@drawable/slider_left" />

</FrameLayout>